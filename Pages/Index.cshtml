@page

<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Dashboard</title>
         
        <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700" rel="stylesheet"> 
        <link rel="stylesheet" href="styles.css" />

        <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
        <script src="https://ajax.aspnetcdn.com/ajax/knockout/knockout-3.4.2.js"></script>

        <meta http-equiv="refresh" content="86400"> <!-- 24Hr reload. -->
    </head>
    <body>
        <div id="dashboard" class="dashboard">

            <div class="row">
                <div class="col">
                    <div class="clock" data-bind="with: clockVm">
                    <div class="time" data-bind="text: time"></div>
                    <div class="date">
                        <span data-bind="text: day"></span> 
                        <span data-bind="text: date"></span>
                    </div>
                </div>

                </div>
                <div class="col">

                    <div class="weather" data-bind="with: weatherVm">
                        <!-- ko with: weatherData -->
                        <div class="title" data-bind="text: description"></div>
                        <div class="temp">
                            <span data-bind="text: low"></span> tot <span data-bind="text: high"></span> graden
                        </div>
                        <!-- /ko -->
                    </div>

                </div>
            </div>

            <div class="row">
                <div class="col">
                    <div class="weather-wrapper">
                        <iframe id="raininfo" src="https://gadgets.buienradar.nl/gadget/zoommap/?lat=52.43854&lng=4.82643&overname=2&zoom=11&naam=zaandam&size=2b&voor=1" scrolling=no width=330 height=330 frameborder=no></iframe>
                    </div>
                </div>
                <div class="col">
                    <div class="weahter-wrapper">
                        <iframe id="raininfo-nl" src="https://gadgets.buienradar.nl/gadget/zoommap/?lat=52.43854&lng=4.82643&overname=2&zoom=6&naam=zaandam&size=2b&voor=0" scrolling=no width=330 height=330 frameborder=no></iframe>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col">
                    <div class="railway" data-bind="with: railwayVm">
                        <div>Openbaar vervoer</div>


                        <!-- ko foreach: railwayData -->
                        
                        <div class="trainTime">
                            <div class="time" data-bind="css: { delayed: delay !== null }">
                                <span data-bind="text: departureTimeString"></span>
                            </div>
                            <div class="info">
                                <div class="destination">
                                    <strong data-bind="text: delay !== null ? (delay + ' |') : ''"></strong> Vanaf spoor <span data-bind="text: track"></span> richting <span data-bind="text: destination"></span></div>
                                <div class="route">
                                    Via <span data-bind="text: route"></span>
                                    <div class="notes" data-bind="if: notes">
                                        <div data-bind="foreach: notes">
                                            <strong class="note"><span data-bind="text: $data"></span></strong>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- /ko -->
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col" data-bind="with: xkcdVm">
                    <div data-bind="with: strip" class="center-content">
                        <h3 data-bind="text: title"></h3>
                        <img src="" class="comic" data-bind="attr: { src: img }" />
                        <div>
                            <small data-bind="text: alt"></small>
                        </div>
                    </div>
                </div>
            </div>

        </div>

        <div class="backdrop"></div>
        <div class="overlay"></div>


        <script type="text/javascript" src="app.js"></script>
    </body>
</html>